{
  "name": "facaade",
  "version": "0.2.0",
  "description": "a style agnostic react component library",
  "main": "./dist/index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "npm test -- -w",
    "init": "mkdir dist",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && npm run init",
    "build": "webpack --mode production --config webpack.config.js",
    "pretest": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch --verbose",
    "test:coverage": "jest --coverage",
    "storybook": "start-storybook -p 9001 -c .storybook"
  },
  "author": "Aaron Moore <hi@madebyaaron.xyz>",
  "license": "ISC",
  "devDependencies": {
    "@storybook/react": "^3.4.10",
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-jest": "^23.6.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^1.0.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "enzyme-to-json": "^3.3.4",
    "jest": "^23.6.0",
    "node-sass": "^4.9.3",
    "regenerator-runtime": "^0.12.1",
    "sass-loader": "^7.1.0",
    "sinon": "^6.2.0",
    "style-loader": "^0.23.0",
    "webpack": "^4.18.0",
    "webpack-cli": "^3.1.0"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "verbose": true,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/src/setup"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>src/setup/setupEnzyme.js",
    "moduleNameMapper": {
      "^.*\\.scss$": "<rootDir>src/setup/scssStub.js"
    }
  },
  "dependencies": {
    "react": "^16.5.0",
    "react-dom": "^16.5.0"
  }
}
